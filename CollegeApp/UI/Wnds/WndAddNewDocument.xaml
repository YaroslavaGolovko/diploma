<Window x:Class="CollegeApp.UI.Windows.WndAddNewDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollegeApp.UI.Windows"
        mc:Ignorable="d"
        Title="Документы УМО" Height="400" Width="500" Icon="/Resources/logoICO.ico" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Vertical" Margin="0 20 0 30">
        <TextBlock Text="Добавление документа" FontSize="30"/>
        <ComboBox x:Name="cmbProfessors" Width="250" Foreground="Gray" IsEditable="True" IsReadOnly="True" Text="Выберите преподавателя" DisplayMemberPath="FullName" SelectionChanged="cmbProfessors_SelectionChanged" Margin="0 40 0 0"/>
        <ComboBox x:Name="cmbSubjects" Width="250" Foreground="Gray" IsEditable="True" IsReadOnly="True" Text="Выберите дисциплину" DisplayMemberPath="SubjectSpeciality.Subject.Name" SelectionChanged="cmbSubjects_SelectionChanged" Margin="0 40 0 0"/>
        <Button x:Name="btnSave" Content="Сохранить" IsEnabled="False" Click="btnSave_Click" Margin="0 40 0 0"/>
        <Button x:Name="btnClose" Content="Выйти" Click="btnClose_Click" Margin="0 40 0 0"/>
    </StackPanel>
</Window>
