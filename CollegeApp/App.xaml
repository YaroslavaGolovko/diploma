            <Style TargetType="TextBox" x:Key="StyleTextBoxPassword">
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                    <VisualBrush x:Key="hintText" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                        <VisualBrush.Visual>
                            <Label VerticalContentAlignment="Center" Width="250" Height="35" FontFamily="Cambria" FontSize="16" Content="Введите пароль" Foreground="LightGray" Background="White"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Style.Resources>
                <Style.Triggers>
                    <DataTrigger Binding ="{Binding ElementName=tbPassword, Path=Text.Length}" Value="0">
                        <Setter Property="Background" Value="{StaticResource hintText}" />
                    </DataTrigger>
                    <DataTrigger Binding ="{Binding ElementName=tbLogin, Path=Text.Length}" Value="0">
                        <Setter Property="IsEnabled" Value="False" />
                    </DataTrigger>
                </Style.Triggers>
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="35"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="CaretBrush" Value="Gray"/>
                <Setter Property="FontFamily" Value="Cambria"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style TargetType="PasswordBox" x:Key="StylePasswordBoxPassword">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type PasswordBox}">
                            <Border Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="4">
                                <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"/>
                            </Border>
                                <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=tbLogin}" Value="">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="35"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="CaretBrush" Value="Gray"/>
                <Setter Property="FontFamily" Value="Cambria"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="35"/>
                <Setter Property="FontFamily" Value="Cambria"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatLightButton}" x:Key="StyleButtonImage">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Text, ElementName=tbLogin}" Value="">
                        <Setter Property="IsEnabled" Value="False"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
